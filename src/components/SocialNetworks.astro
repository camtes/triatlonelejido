---
const rrss = [
    {
        name: 'Facebook',
        url: 'https://www.facebook.com/triatlonelejido',
        icon: '/img/icon/fb.svg'
    },
    {
        name: 'Instagram',
        url: 'https://www.instagram.com/triatlonelejido',
        icon: '/img/icon/instagram.svg'
    }
]
---

<section class="bg-gradient-to-r from-white to-gray-200 flex flex-row justify-between p-4 pt-2 pb-2 items-center italic text-gray-600 font-medium md:pl-72 md:pr-72">
    <p class="z-10 text-md md:text-2xl p-4 md:w-96 md:relative">Siguenos en nuestras redes sociales.</p>
    
    <div class="flex flex-row items-end justify-end gap-4">
        <!-- <span class="text-xl md:text-5xl text-gray-300 opacity-55">@triatlonelejido</span> -->
        {
            rrss.map((item) => (
                <a href={item.url} class="hover:scale-125 hover:drop-shadow-lg" target="_blank" rel="noopener noreferrer">
                    <img src={item.icon} alt={item.name} class="w-12 h-12" />
                </a>
            ))
        }
    </div>
</section>